                        android:padding="4dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/edittext_rounded_corners"
                        android:layout_weight="1"
                        android:src="@drawable/ic_share_black_24dp"/>
                </LinearLayout>


